{% extends '::base.html.twig' %}


{% block body %}
    {{ parent() }}
    {% if error != '' %}
        <div class="row">
            <div class="col s8 offset-s2">
                <div class="card-panel red lighten-1">
                    <span class="white-text center-align">{{ error }}</span>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="row">
        <div class="login col s8 offset-s2">
            <div class="row">
                <form class="col s12" action="/nuevo_usuario" method="POST" >
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">account_circle</i>
                            <input id="icon_prefix" type="text" class="validate" name="username" required>
                            <label for="icon_prefix">Usuario</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">vpn_key</i>
                            <input id="icon_prefix" type="password" class="validate" name="password" required>
                            <label for="icon_prefix">Contraseña</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">vpn_key</i>
                            <input id="icon_prefix" type="password" class="validate" name="passwordConfirm" required>
                            <label for="icon_prefix">Repita la contraseña</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">perm_contact_calendar</i>
                            <input id="icon_prefix" type="email" class="validate" name="email" required>
                            <label for="icon_prefix">Email</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">store</i>
                            <input id="icon_prefix" type="number" class="validate" name="creditCard" required>
                            <label for="icon_prefix">Tarjeta de credito</label>
                        </div>
                    </div>
                    <div class="row">
                        <input type="submit" value="Enviar" class="waves-effect waves-light btn col s4 offset-s4" />
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('input#input_text, textarea#textarea1').characterCounter();

        });
    </script>
{% endblock %}